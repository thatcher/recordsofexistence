
<form id='paypal-${ this.ska }'
      method='post'
      action='https://www.paypal.com/cgi-bin/webscr'
      target='paypal'>
    
    <div class='last column box span-4'>
        <br/>
        <h6>purchase this pressing</h6>
        <p align='center'>
            <em>${ this.format }</em>
            <br/>
            <span class='cost'> $ ${ this.price }</span>
            <br/>
            <input
                type='hidden'
                name='cmd'
                value='_s-xclick'
            />
            <input
                type='hidden'
                name='hosted_button_id'
                value='${ this.ska }'
            />
            <input
                id=    '${ this.ska }'
                class= 'addtocart'
                type=  'image'
                src=   'https://www.paypal.com/en_US/i/btn/btn_cart_LG.gif'
                alt=   'PayPal - The safer, easier way to pay online!'
                name=  'submit'
            />
        </p>
    </div>

</form>
    